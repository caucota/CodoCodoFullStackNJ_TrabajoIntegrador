<!DOCTYPE html>
<html lang="en">
  <%-include("partials/head")%>
  <body>
    <%-include("partials/header")%>
    <div class="container_shop">
      <aside class="form_shop">
        <div>
          <h4 class="subtitulo" for="buscar">BUSCAR POR NOMBRE <%=opcionOrden%></h4>
          <input class="input_tipo1" type="text" id="buscar" placeholder="Nombre" value=<%=filtroItem%>></input> 
        </div>
        <div>
          <h4 class="subtitulo" for="buscarCollection">BUSCAR POR CATEGORIA</h4>
          <input class="input_tipo1" type="text" id="buscarCollection" placeholder="Categoria" value=<%=filtroCategoria%>></input> 
        </div>
        <div>
            <h4 class="subtitulo" for="ordenar">ORDEN</h4>
            <select class="input_tipo1" name="Mayor a menor" id="orden" placeholder="Mayor a menor">
              <% if (opcionOrden =='Alf_A_Z') { %>
                <option value="Alf_A_Z" selected= "selected">A > Z</option>
              <% } else { %>
                <option value="Alf_A_Z" >A > Z</option>
              <% } %>
              <% if (opcionOrden =='Alf_Z_A') { %>
                <option value="Alf_Z_A" selected= "selected">Z > A</option>
              <% } else { %>
                <option value="Alf_Z_A" >Z > A</option>
              <% } %>
             </select>
        </div>
        <div>
          <h4 class="subtitulo">PRECIO</h4>
          <div>
            <label class="label_min_max" for="min">MIN</label>
            <input class="input_min_max" type="number" id="minimo" placeholder="0" value="<%=precioMinimo%>">
            <span class="label_min_max">-</span>
            <label class="label_min_max" for="max">MAX</label>
            <input class="input_min_max" type="number" id="maximo" placeholder="0" value="<%=precioMaximo%>">
          </div>
        </div>
        <div>
          <h4 class="subtitulo">FILTRAR</h4>
          <div class="container_opciones_filtro">
            <div>
              <% if (chkNuevos=='true') {%>
                <input id="inputChkNuevos" class="check" type="checkbox" checked=true >
              <%} else { %>
                <input id="inputChkNuevos" class="check" type="checkbox" >
              <%}%>
              <label class="label_filtro_opciones" for="nuevos">NUEVOS</label>
            </div>  
            <div>
                <input class="check" type="checkbox">
                <label class="label_filtro_opciones" for="ofertas">OFERTAS</label>
            </div>
            <div>
              <input class="check" type="checkbox">
              <label class="label_filtro_opciones" for="especial">EDICIÃ“N ESPECIAL</label>
            </div>
            <div>
              <input class="check" type="checkbox">
              <label class="label_filtro_opciones" for="favoritos">FAVORITOS</label>
            </div>
          </div>
        </div>
      </aside>
      <main class="main_shop">
          <%-include("partials/funkosList")%>
          <%-include("partials/funkosList")%>
          <%-include("partials/funkosList")%>
      </main>
    </div>

    <div class="container_buttons">
      <div class="div_before_buttons">
      </div>
      <div class="div_buttons">
        <button class="square_button button_grey"><</button>
        <button class="square_button button_red">1</button>
        <button class="square_button">2</button>
        <button class="square_button">...</button>
        <button class="square_button">9</button>
        <button class="square_button">10</button>
        <button class="square_button">></button>
      </div>  
  </div>

    <%-include("partials/footer")%>

    <script src="/scripts/shopScripts.js"></script>
  </body>
</html>
