<!DOCTYPE html>
<html lang="en">
  <%-include("partials/head")%>
  <body>
    <%-include("partials/header")%>
    <main>
        <div class="cart__main">
            <h1 class="h1Carrito">CARRITO DE COMPRAS</h1>
        </div>
        <div class="divColumnasGrilla">

            <div class="columnaItem">
              <h2>DETALLE DEL PRODUCTO</h2>
            </div>
            <div class="columna">
              <h2>CANTIDAD</h2>
            </div>
            <div class="columna">
              <h2>TOTAL</h2>
            </div>

         </div>        
        <div class="div__main">
            <ul class="cart_detalles">
                <% funkos.forEach(item=> { %>
                    <li class="cart__unelemento" >
                        <div class="cart_elemento_data">
                            <picture class="cart_elemento_picture">
                                <img src="<%= item.img %>" alt="">
                            </picture>

                            <article class="cart_elemento_info">
                                <p class="cart_elemento_name">
                                    <%= item.name %>
                                </p>
                                <p class="cart_elemento_collection">
                                    <%= item.collection %>
                                </p>
                                <p class="cart_elemento_price">
                                    Precio: $<%= item.price %>
                                </p>
                            </article>
                        </div>

                        <div class="cart_elemento_quantity_buttons">
                            <input class="elemento__input" type="text" id="quantity" 
                            value="<%= item.stock %>" placeholder="">
                            <div class="cart_elemento_quantity">
                                <button class="elemento__quantity" id="add" 
                                data-item-id="<%= item.id %>"
                                >+</button>
                                
                                <button class="elemento__quantity" id="substract"
                                data-item-id="<%= item.id %>"
                                >-</button>
                            </div>
                        </div>

                        <div class="cart_total_price" >
                            <p id="element_total_price">$<%= item.price %> </p>
                        </div>

                        <div>
                            <img class="cart_elemento_delete" src="/images/icons/gg-close-o.svg" 
                            data-item-id="<%= item.product_id %>"
                            data-item-quantity="<%= item.quantity %>"
                            alt="">
                        </div>
                    </li>
                    <% }); %>
                </ul>
            </div>
        <section class="resumen__cart">
          <h2 class="title">RESUMEN</h2>
          <article class="resumen__cart-container">
              <div class="resumen__cart-line">
                  <p>CANTIDAD DE ELEMENTOS</p>
                  <p id="cant-items-cart"></p>
              </div>
              <div class="resumen__cart-line">
                  <p>SUBTOTAL</p>
                  <p id="subtotal"></p>
              </div>
              <div class="resumen__cart-line">
                  <p>ENVIO</p>
                  <p>$0</p>
              </div>
              <div class="resumen__cart-line">
                  <p>TOTAL</p>
                  <p id="total-cart"></p>
              </div>
          </article>

          <a href="#" class="cart__btn-pay">IR A PAGAR</a>

        </section>
    </main>
    <%-include("partials/footer")%>
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
  </body>
</html>
